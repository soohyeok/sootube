extends layouts/main.pug

block content
    .form-container
        form(action=`/videos${routes.videoUpload}`, method="post")
            label(for="videoFile") Video File
            input(type="file", id="videoFile", name="videoFile", required=true)
            input(type="text", placeholder="Title", name="videoTitle", required=true)
            textarea(placeholder="Description", name="videoDescription", required=true)
            input(type="submit", value="Upload")